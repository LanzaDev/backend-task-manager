generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TaskStatus {
  CANCELADA
  PENDENTE
  CONCLU√çDA
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String
  Tasks    Task[]
}

model Task {
  id          Int      @id @default(autoincrement())
  user        User     @relation(fields: [userId], references: [id])
  userId      Int
  title       String
  description String?
  status      TaskStatus @default(PENDENTE)
  createdAt   DateTime @default(now())
}
